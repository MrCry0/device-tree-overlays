// Enable the LCDIF interface, tuning settings for
// Toradex Cap LVDS 10" Display on the Colibri iMX6DL

/dts-v1/;
/plugin/;

/ {
	compatible = "toradex,colibri_imx6dl";
};

&backlight {
	status = "okay";
};

&lcd {
	status = "okay";
};

&mxcfb1 {
	mode_str ="1280x800M@60";
	status = "okay";
};

&pwm3 {
	status = "okay";
};
