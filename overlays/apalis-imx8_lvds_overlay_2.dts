// LVDS display overlay for Apalis Evaluation board Mezzanine

/dts-v1/;
/plugin/;
/ {
	compatible = "toradex,apalis-imx8";
};

&ldb1 {
	status = "okay";

	lvds-channel@0 {
		#address-cells = <1>;
		#size-cells = <0>;

		fsl,data-mapping = "spwg";
		fsl,data-width = <24>;
		status = "okay";

		port@1 {
			reg = <1>;

			lvds1_out: endpoint {
				remote-endpoint = <&panel_lvds_in>;
			};
		};
	};
};

&ldb1_phy {
	status = "okay";
};

&panel_lvds {
	status = "okay";
};
